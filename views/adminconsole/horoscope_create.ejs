<!-- views/adminconsole/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<!-- begin::Head -->

<head>
    <% include ../partials/head %>
</head>
<!-- end::Head -->
<!-- end::Body -->

<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <!-- BEGIN: Header -->
        <% include ../partials/header %>
            <!-- END: Header -->
            <!-- begin::Body -->
            <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
                <!-- BEGIN: Left Aside -->
                <% include ../partials/menu %>
                    <!-- END: Left Aside -->
                    <div class="m-grid__item m-grid__item--fluid m-wrapper">
                        <!-- BEGIN: Subheader -->
                        <div class="m-subheader ">
                            <div class="d-flex align-items-center">
                                <div class="mr-auto">
                                    <h3 class="m-subheader__title m-subheader__title--separator">
                                        จัดการข้อมูลเซียมซี
                                    </h3>
                                    <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                                        <li class="m-nav__item m-nav__item--home">
                                            <a href="#" class="m-nav__link m-nav__link--icon">
                                                <i class="m-nav__link-icon la la-home"></i>
                                            </a>
                                        </li>
                                        <li class="m-nav__separator">
                                            -
                                        </li>
                                        <li class="m-nav__item">
                                            <a href="" class="m-nav__link">
                                                <span class="m-nav__link-text">
                                                    จัดการข้อมูลเซียมซี
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- END: Subheader -->
                        <div class="m-content">
                            <!--begin::Portlet-->
                            <div class="m-portlet">
                                <div class="m-portlet__head">
                                    <div class="m-portlet__head-caption">
                                        <div class="m-portlet__head-title">
                                            <span class="m-portlet__head-icon">
                                                <i class="flaticon-plus"></i>
                                            </span>
                                            <h3 class="m-portlet__head-text">
                                                เพิ่มข้อมูลเซียมซี
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                                <!--begin::Form-->
                                <form class="m-form m-form--state m-form--fit m-form--label-align-right m-form--group-seperator-dashed" id="m_form" novalidate="novalidate"
                                    action="/adminconsole/horoscope_save" enctype="multipart/form-data" method="post">
                                    <div class="m-portlet__body">
                                        <div class="form-group m-form__group row">
                                            <div class="col-lg-9 m-form__group-sub">
                                                <label>
                                                    * วัด:
                                                </label>
                                                <select class="form-control m-select2" id="temple" name="temple">
                                                    <% if(temples.length>0) { %>
                                                        <% for(var i=0; i<temples.length;i++) { %>
                                                            <% if(templechecked == temples[i].id) { %>
                                                                <option value="<%= temples[i].id %>" selected>
                                                                    <%= temples[i].templeName %>
                                                                </option>
                                                                <% } else { %>
                                                                    <option value="<%= temples[i].id %>">
                                                                        <%= temples[i].templeName %>
                                                                    </option>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                </select>
                                            </div>
                                            <div class="col-lg-3 m-form__group-sub">
                                                <label>
                                                    * ใบเซียมซีเลขที่:
                                                </label>
                                                <input type="text" name="horoscopeno" class="form-control m-input">
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group row">
                                            <div class="col-lg-12 m-form__group-sub">
                                                <label>
                                                    * รูปคำทำนายเซียมซี :
                                                </label>
                                                <input class="form-control" type="file" name="horoscope_photo" />
                                            </div>
                                        </div>
                                        <!-- <div class="form-group m-form__group row">
                                            <div class="col-lg-12 m-form__group-sub">
                                                <label>
                                                    คำทำนายเซียมซี (ไทย):
                                                </label>
                                                <textarea name="horoscope_th" id="horoscope_th" class="summernote"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group row">
                                            <div class="col-lg-12 m-form__group-sub">
                                                <label>
                                                    คำทำนายเซียมซี (อังกฤษ):
                                                </label>
                                                <textarea name="horoscope_en" id="horoscope_en" class="summernote"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group row">
                                            <div class="col-lg-12 m-form__group-sub">
                                                <label>
                                                    คำทำนายเซียมซี (จีน):
                                                </label>
                                                <textarea name="horoscope_chn" id="horoscope_chn" class="summernote"></textarea>
                                            </div>
                                        </div>-->
                                    </div> 
                                    <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                                        <div class="m-form__actions m-form__actions--solid">
                                            <div class="row">
                                                <div class="col-lg-4"></div>
                                                <div class="col-lg-8">
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="fa fa-save"></i> บันทึกรายการ
                                                    </button>
                                                    <a class="btn btn-secondary block-ui" href="/adminconsole/horoscope_list/">
                                                        <i class="fa fa-reply-all"></i> กลับหน้ารายการ</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <!--end::Form-->
                            </div>
                            <!--end::Portlet-->
                        </div>
                    </div>
            </div>
            <!-- end:: Body -->
            <!-- begin::Footer -->
            <% include ../partials/footer %>
                <!-- end::Footer -->
    </div>
    <!-- end:: Page -->
    <!-- begin::Bottom -->
    <% include ../partials/bottom %>
        <!-- end::Bottom -->

        <script>
            $(document).ready(function () {
                $("#m_form").validate({
                    // define validation rules
                    rules: {
                        temple: {
                            required: true
                        },
                        horoscopeno: {
                            required: true
                        },
                        horoscope_photo: {
                            required: true
                        }
                    },

                    //display error alert on form submit  
                    invalidHandler: function (event, validator) {
                        mApp.scrollTo("#m_form");

                        swal({
                            "title": "",
                            "text": "มีข้อผิดพลาดในการส่ง กรุณาแก้ไขให้ถูกต้อง",
                            "type": "error",
                            "confirmButtonClass": "btn btn-secondary m-btn m-btn--wide"
                        });
                    },

                    submitHandler: function (form) {
                        form[0].submit(); // submit the form
                    }
                });

                // summernote
                // $('.summernote').summernote({
                //     height: 300
                // });
            });
        </script>
</body>
<!-- end::Body -->

</html>