<!-- views/adminconsole/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<!-- begin::Head -->

<head>
    <% include ../partials/head %>
</head>
<!-- end::Head -->
<!-- end::Body -->

<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <!-- BEGIN: Header -->
        <% include ../partials/header %>
            <!-- END: Header -->
            <!-- begin::Body -->
            <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
                <!-- BEGIN: Left Aside -->
                <% include ../partials/menu %>
                    <!-- END: Left Aside -->
                    <div class="m-grid__item m-grid__item--fluid m-wrapper">
                        <!-- BEGIN: Subheader -->
                        <div class="m-subheader ">
                            <div class="d-flex align-items-center">
                                <div class="mr-auto">
                                    <h3 class="m-subheader__title m-subheader__title--separator">
                                        จัดการข้อมูลเซียมซี
                                    </h3>
                                    <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                                        <li class="m-nav__item m-nav__item--home">
                                            <a href="#" class="m-nav__link m-nav__link--icon">
                                                <i class="m-nav__link-icon la la-home"></i>
                                            </a>
                                        </li>
                                        <li class="m-nav__separator">
                                            -
                                        </li>
                                        <li class="m-nav__item">
                                            <a href="" class="m-nav__link">
                                                <span class="m-nav__link-text">
                                                    จัดการข้อมูลเซียมซี
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- END: Subheader -->
                        <div class="m-content">
                            <div class="m-portlet m-portlet--mobile">
                                <div class="m-portlet__head">
                                    <div class="m-portlet__head-caption">
                                        <div class="m-portlet__head-title">
                                            <span class="m-portlet__head-icon">
                                                <i class="flaticon-search"></i>
                                            </span>
                                            <h3 class="m-portlet__head-text">
                                                ค้นหาข้อมูลเซียมซี
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="m-portlet__body">
                                    <!--begin::Section-->
                                    <div class="m-demo" data-code-preview="true" data-code-html="true" data-code-js="false">
                                        <div class="m-demo__preview m-demo__preview--badge">
                                            <!--begin::Search-->
                                            <form class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" novalidate="novalidate" action="/adminconsole/horoscope_list"
                                                method="get">
                                                <div class="m-portlet__body">
                                                    <div class="form-group m-form__group row">
                                                        <label class="col-lg-3 col-form-label">
                                                            ค้นหารายชื่อวัด:
                                                        </label>
                                                        <div class="col-lg-6">
                                                            <select class="form-control m-select2" id="temple" name="temple">
                                                                <option selected value="">=== เลือกทั้งหมด ===</option>
                                                                <% if(temples.length>0) { %>
                                                                    <% for(var i=0; i<temples.length;i++) { %>
                                                                        <% if(templechecked == temples[i].id) { %>
                                                                            <option value="<%= temples[i].id %>" selected>
                                                                                <%= temples[i].templeName %>
                                                                            </option>
                                                                            <% } else { %>
                                                                                <option value="<%= temples[i].id %>">
                                                                                    <%= temples[i].templeName %>
                                                                                </option>
                                                                                <% } %>
                                                                                    <% } %>
                                                                                        <% } %>
                                                            </select>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <button type="submit" formnovalidate="formnovalidate" class="btn btn-info block-ui">
                                                                <i class="flaticon-search-magnifier-interface-symbol"></i> ค้นหาข้อมูล
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                            <!--end::Search-->
                                        </div>
                                    </div>
                                    <!--end::Section-->
                                    <!--begin: Search Form -->
                                    <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                                        <div class="row align-items-center">
                                            <div class="col-xl-8 order-2 order-xl-1">
                                                <div class="form-group m-form__group row align-items-center">
                                                    <div class="col-md-4">
                                                        <div class="m-input-icon m-input-icon--left">
                                                            <input type="text" class="form-control m-input m-input--solid" placeholder="Search..." id="generalSearch">
                                                            <span class="m-input-icon__icon m-input-icon__icon--left">
                                                                <span>
                                                                    <i class="la la-search"></i>
                                                                </span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                                                <a href="/adminconsole/horoscope_create?temple=<%= templechecked %>" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                                                    <span>
                                                        <i class="flaticon-plus"></i>
                                                        <span>
                                                            เพิ่มข้อมูลเซียมซี
                                                        </span>
                                                    </span>
                                                </a>
                                                <div class="m-separator m-separator--dashed d-xl-none"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end: Search Form -->
                                    <!--begin: Datatable -->
                                    <% if(horoscopes.length>0) { %>
                                        <table class="table table-bordered m-table m-datatable" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        ลำดับ
                                                    </th>
                                                    <th>
                                                        ชื่อวัด
                                                    </th>
                                                    <th>
                                                        ใบเซียมซีเลขที่
                                                    </th>
                                                    <th>
                                                        รูปคำทำนายเซียมซี
                                                    </th>
                                                    <th>
                                                        QR Code
                                                    </th>
                                                    <th>
                                                        รายละเอียด
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(var i=0; i<horoscopes.length;i++) { %>
                                                    <tr>
                                                        <td>
                                                            <%= i + 1%>
                                                        </td>
                                                        <td>
                                                            <%= horoscopes[i].temple.templeName %>
                                                        </td>
                                                        <td>
                                                            <%= horoscopes[i].horoscopeno %>
                                                        </td>
                                                        <td>
                                                            <% if (horoscopes[i].horoscope_photo != null) { %>
                                                                <a href="../../<%= horoscopes[i].horoscope_photo.replace('public\\', '') %>" target="_blank">
                                                                    <img src="../../<%= horoscopes[i].horoscope_photo.replace('public\\', '') %>" height="100" />
                                                                </a>
                                                                <% } %>
                                                        </td>
                                                        <td>
                                                            <a href="https://chart.googleapis.com/chart?cht=qr&chl=<%= host %>/view/<%= horoscopes[i]._id %>&chs=320x320&chld=L%7C0"
                                                                target="_blank">
                                                                <img src="https://chart.googleapis.com/chart?cht=qr&chl=<%= host %>/view/<%= horoscopes[i]._id %>&chs=160x160&chld=L%7C0"
                                                                    width="50">
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a href="/adminconsole/horoscope_show/<%= horoscopes[i]._id%>" class="btn btn-primary btn-sm m-btn  m-btn m-btn--icon" data-toggle="m-tooltip"
                                                                data-original-title="รายละเอียด">
                                                                <i class="la la-search-plus"></i> View
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                        <% } else { %>
                                            <div>ไม่มีข้อมูล.</div>
                                            <% } %>
                                                <!--end: Datatable -->
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
            <!-- end:: Body -->
            <!-- begin::Footer -->
            <% include ../partials/footer %>
                <!-- end::Footer -->
    </div>
    <!-- end:: Page -->
    <!-- begin::Bottom -->
    <% include ../partials/bottom %>
        <!-- end::Bottom -->

        <script>
            $(document).ready(function () {
                // Datatable
                $('.m-datatable').mDatatable({
                    data: {
                        saveState: { cookie: false },
                    },
                    search: {
                        input: $('#generalSearch'),
                    },
                    columns: [
                        { field: "ลำดับ", width: 35 },
                        { field: "ชื่อวัด", width: 200 },
                        { field: "ใบเซียมซี ที่", width: 80 },
                        { field: "คำทำนายเซียมซี (ไทย)", width: 375 },
                        { field: "QR Code", width: 65 },
                        { field: "รายละเอียด", width: 80 }
                    ]
                });
            });
        </script>
</body>
<!-- end::Body -->

</html>